{
  "name": "hulk",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "create:widget": "ts-node scripts/create_widget.ts",
    "install:lib": "ts-node scripts/install_lib.ts",
    "build:widget": "ts-node scripts/build_widget.ts",
    "preview:runtime": "serve dist",
    "build": "lerna run build --stream",
    "build:one": "lerna run build --scope=",
    "storybook": "storybook dev -p 6006",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings  0 && npm run lint:js && npm run lint:style && npm run lint:prettier",
    "prettier": "prettier -c --write \"src/**/*\"",
    "lint-staged": "lint-staged",
    "lint-staged:js": "eslint --ext .js,.jsx,.ts,.tsx ",
    "lint:fix": "eslint --fix --cache --ext .js,.jsx,.ts,.tsx --format=pretty ./src && npm run lint:style",
    "lint:js": "eslint --cache --ext .js,.jsx,.ts,.tsx --format=pretty ./src",
    "lint:prettier": "prettier --check \"src/**/*\" --end-of-line auto",
    "lint:style": "stylelint --fix \"src/**/*.less\" --syntax less",
    "preview": "vite preview",
    "precommit": "lint-staged",
    "tsc": "tsc --noEmit",
    "build-storybook": "storybook build"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": "npm run lint-staged:js",
    "**/*.{js,jsx,tsx,ts,less,md,json}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@hulk/common": "0.0.0"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "3",
    "@commitlint/cli": "19.8.0",
    "@commitlint/config-conventional": "19.8.0",
    "@eslint/js": "9.25.1",
    "@monaco-editor/react": "^4.7.0",
    "@storybook/addon-actions": "^8.6.12",
    "@storybook/addon-console": "^3.0.0",
    "@storybook/addon-essentials": "8.6.12",
    "@storybook/addon-onboarding": "8.6.12",
    "@storybook/blocks": "8.6.12",
    "@storybook/experimental-addon-test": "8.6.12",
    "@storybook/react": "8.6.12",
    "@storybook/react-vite": "8.6.12",
    "@storybook/test": "8.6.12",
    "@types/echarts": "5.0.0",
    "@types/lodash": "^4.17.16",
    "@types/react": "19.1.2",
    "@types/react-dom": "19.1.2",
    "@types/three": "0.168.0",
    "@umijs/fabric": "4.0.1",
    "@vitejs/plugin-react": "4.4.1",
    "@vitest/browser": "3.1.2",
    "@vitest/coverage-v8": "3.1.2",
    "globals": "16.0.0",
    "husky": "9.1.7",
    "lerna": "8.2.2",
    "lint-staged": "15.5.1",
    "monaco-editor": "0.52.2",
    "monaco-yaml": "5.3.1",
    "playwright": "1.52.0",
    "prettier": "3.5.3",
    "serve": "14.2.4",
    "storybook": "8.6.12",
    "ts-node": "10.9.2",
    "typescript": "5.8.3",
    "typescript-eslint": "8.31.0",
    "vite": "6.3.2",
    "vite-plugin-dts": "4.5.3",
    "vite-plugin-monaco-editor": "^1.1.0",
    "vite-plugin-package-version": "^1.1.0",
    "vitest": "3.1.2",
    "yaml": "^2.7.1"
  }
}
