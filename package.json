{
  "name": "hulk",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "create:widget": "ts-node scripts/create_widget.ts",
    "create:lib": "ts-node scripts/create_lib.ts",
    "build:widget": "ts-node scripts/build_widget.ts",
    "preview:runtime": "serve dist",
    "build": "lerna run build --stream",
    "build:one": "lerna run build --scope=",
    "storybook": "storybook dev -p 6006",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings  0 && npm run lint:js && npm run lint:style && npm run lint:prettier",
    "prettier": "prettier -c --write \"src/**/*\"",
    "lint-staged": "lint-staged",
    "lint-staged:js": "eslint --ext .js,.jsx,.ts,.tsx ",
    "lint:fix": "eslint --fix --cache --ext .js,.jsx,.ts,.tsx --format=pretty ./src && npm run lint:style",
    "lint:js": "eslint --cache --ext .js,.jsx,.ts,.tsx --format=pretty ./src",
    "lint:prettier": "prettier --check \"src/**/*\" --end-of-line auto",
    "lint:style": "stylelint --fix \"src/**/*.less\" --syntax less",
    "preview": "vite preview",
    "precommit": "lint-staged",
    "tsc": "tsc --noEmit",
    "build-storybook": "storybook build"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": "npm run lint-staged:js",
    "**/*.{js,jsx,tsx,ts,less,md,json}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@vitejs/plugin-react": "^4.3.4",
    "antd": "^5.24.5",
    "antd-style": "^3.7.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^3",
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@eslint/js": "9.22.0",
    "@storybook/addon-essentials": "^8.6.9",
    "@storybook/addon-onboarding": "^8.6.9",
    "@storybook/blocks": "^8.6.9",
    "@storybook/experimental-addon-test": "^8.6.9",
    "@storybook/react": "^8.6.9",
    "@storybook/react-vite": "^8.6.9",
    "@storybook/test": "^8.6.9",
    "@types/react": "19.0.12",
    "@types/react-dom": "19.0.4",
    "@umijs/fabric": "4.0.1",
    "@vitest/browser": "^3.0.9",
    "@vitest/coverage-v8": "^3.0.9",
    "globals": "16.0.0",
    "husky": "9.1.7",
    "lerna": "^8.2.1",
    "lint-staged": "15.5.0",
    "playwright": "^1.51.1",
    "prettier": "3.5.3",
    "serve": "^14.2.4",
    "storybook": "^8.6.9",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2",
    "typescript-eslint": "8.26.1",
    "vite": "^6.2.3",
    "vite-plugin-dts": "^4.5.3",
    "vitest": "^3.0.9"
  }
}
